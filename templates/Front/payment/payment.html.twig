{% extends 'Front/base.html.twig' %}

{% block content %}

    <div class="w-full min-h-screen bg-grey-lightest">
        <div class="w-1/3 h-auto mx-auto px-8 py-16 pb-4">
            <h1 class="text-playmore-purple-500 mb-6">Acheter des Playmore Coins</h1>
            <div class="flex flex-col w-full h-auto">
                <form action="{{ path('app_security_done') }}" method="post" id="payment-form">
                    <div class="flex flex-col mb-6">
                        <label for="" class="font-bold text-playmore-text text-lg mb-2 uppercase">Valeur (max: 20)</label>
                        <input type="number" min="0" max="20" name="value" class="rounded p-4">
                    </div>
                    <div class="mb-4">
                        <label for="card-element" class="font-bold text-playmore-text text-lg uppercase">
                            Carte de crédit :
                        </label>
                        <div class="flex-col p-4 rounded bg-white mt-2">
                            <div id="card-element" class="cardelement">
                                <!-- A Stripe Element will be inserted here. -->
                            </div>

                            <!-- Used to display form errors. -->
                            <div id="card-errors" role="alert"></div>
                        </div>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" id="button_done" class="rounded bg-playmore-purple-500 p-4 text-white font-bold">Envoyer</button>
                    </div>
                </form>
                <p class="mt-4 text-playmore-purple-500 font-semibold"> Vous n'avez pas de carte de crédit ? Le paiement par Paypal sera bientot disponible.</p>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://js.stripe.com/v3/"></script>
    {{ encore_entry_script_tags('payment') }}
{% endblock %}